{
  "manifest_version": 3,
  "name": "Minimal - New Tab",
  "version": "1.0.0",
  "description": "A minimal new tab page with a search bar and settings",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Minimal - New Tab"
  },
  "icons": {
    "48": "favicon.png",
    "128": "favicon.png"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab", "storage", "identity"],
  "host_permissions": ["<all_urls>"]
}
